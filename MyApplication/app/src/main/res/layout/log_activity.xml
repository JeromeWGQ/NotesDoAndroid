<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.akchen.main_ui.Activity.LoginActivity"
    android:background="@drawable/bg">


        <Button
            android:id="@+id/btregister"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="用户注册"
            android:background="#00000000"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:textColor="#fff"
            android:gravity="top|right|center_horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:id="@+id/imageView"
            android:layout_alignParentTop="true"
            android:layout_above="@+id/textView6" />

        <TextView
            android:text="WeatherAndroidApp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView6"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:textSize="35sp"
            android:gravity="center_horizontal" />

        <EditText
            android:id="@+id/edname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入用户帐号"
            android:gravity="center_vertical|center_horizontal"
            android:textColorHint="#fff"
            android:layout_below="@+id/textView6"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="70dp"
            android:layout_marginRight="70dp" />

        <EditText
            android:id="@+id/edpassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:hint="请输入用户密码"
            android:layout_marginTop="21dp"
            android:layout_below="@+id/edname"
            android:layout_alignLeft="@+id/edname"
            android:layout_alignStart="@+id/edname"
            android:textColorHint="#fff"
            android:gravity="center_vertical|center_horizontal"
            android:layout_marginLeft="70dp"
            android:layout_marginRight="70dp" />

        <Button
            android:id="@+id/btlogin"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="用户登录"
            android:background="#00000000"
            android:layout_weight="0.09"
            android:textColorHint="#fff"
            android:textColor="@color/home_round_progress_bar_blue"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="24dp" />


</LinearLayout>