<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >


    <TextView
        android:id="@+id/txt1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:gravity="center_horizontal"
        android:text="注册"
        android:textColor="@color/home_round_progress_bar_blue"
        android:textSize="35dp" />

    <TextView
        android:id="@+id/txtname1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="帐号:"
        android:textSize="28dp"
        android:layout_alignBottom="@+id/edname1"
        android:layout_marginLeft="30dp"
        android:textColor="@color/home_round_progress_bar_blue" />

    <EditText
        android:id="@+id/edname1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt1"
        android:layout_toRightOf="@id/txtname1"
        android:layout_marginBottom="30dp"
        android:hint="请输入一个合法账号"
        android:layout_marginLeft="10dp" />

    <TextView
        android:id="@+id/txtpassword1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="密码:"
        android:textSize="28dp"
        android:layout_alignTop="@+id/edpassword1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="30dp"
        android:textColor="@color/home_round_progress_bar_blue" />

    <EditText
        android:id="@+id/edpassword1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/edname1"
        android:layout_toRightOf="@id/txtpassword1"
        android:hint="请输入一个合法的密码"
        android:layout_marginLeft="10dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/edpassword1"
        android:layout_marginTop="30dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:id="@+id/linearLayout3">

    </LinearLayout>

    <Button
        android:id="@+id/btregister1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="确认"
        android:textColor="#fff"
        android:background="@color/home_round_progress_bar_blue"
        android:layout_below="@+id/linearLayout3"
        android:layout_alignLeft="@+id/edpassword1"
        android:layout_alignStart="@+id/edpassword1"
        android:layout_marginLeft="35dp"
        android:layout_marginStart="35dp" />
</RelativeLayout>